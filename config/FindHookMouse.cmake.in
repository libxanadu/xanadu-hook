# Explain
message("using Find${PROJECT_NAME}.cmake find")

# Find XANADU_CORE_INCLUDE
find_path(XANADU_CORE_INCLUDE ${PROJECT_NAME}/ HINTS ${CMAKE_INSTALL_PREFIX}/include/)

# Find XANADU_CORE_LIBRARY
if (WIN32)
	find_path(XANADU_CORE_LIBRARY ${PROJECT_NAME}.lib HINTS ${CMAKE_INSTALL_PREFIX}/lib/)
elseif (MINGW)
	find_path(XANADU_CORE_LIBRARY ${PROJECT_NAME}.dll.a HINTS ${CMAKE_INSTALL_PREFIX}/lib/)
elseif (APPLE)
	find_path(XANADU_CORE_LIBRARY lib${PROJECT_NAME}.dylib HINTS ${CMAKE_INSTALL_PREFIX}/lib/)
	find_path(XANADU_CORE_LIBRARY lib${PROJECT_NAME}.a HINTS ${CMAKE_INSTALL_PREFIX}/lib/)
elseif (UNIX)
	find_path(XANADU_CORE_LIBRARY lib${PROJECT_NAME}.so HINTS ${CMAKE_INSTALL_PREFIX}/lib/)
	find_path(XANADU_CORE_LIBRARY lib${PROJECT_NAME}.a HINTS ${CMAKE_INSTALL_PREFIX}/lib/)
endif ()

# Setting
if(XANADU_CORE_INCLUDE AND XANADU_CORE_LIBRARY)
	set(XANADU_CORE_FOUND TRUE)
	include_directories(${XANADU_CORE_INCLUDE_REPLACE})
	link_directories(${XANADU_CORE_LIBRARY_REPLACE})
	add_definitions(-D${XANADU_CORE_BUILD_REPLACE})
	if (CMAKE_BUILD_TYPE STREQUAL "Debug")
		link_libraries(${PROJECT_NAME}D)
	else ()
		link_libraries(${PROJECT_NAME})
	endif ()
endif()
